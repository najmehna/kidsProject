<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TakeSurveyActivity">

    <EditText
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/childNameText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            android:hint="@string/userName" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/spinner3" app:layout_constraintEnd_toEndOf="@+id/spinner3"/>
    <EditText
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/DOBText"
            android:hint="@string/DOB" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner3" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/spinner3" app:layout_constraintEnd_toEndOf="@+id/spinner3"/>
    <Spinner
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/DOBText" android:entries="@array/healthOpts"
            android:spinnerMode="dropdown"/>
    <Spinner
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:entries="@array/wealthOpts"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/childNameText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:entries="@array/healthOpts"/>
    <Button
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp"/>
    <Button
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitButton" app:layout_constraintEnd_toStartOf="@+id/cancelButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.873"/>
</androidx.constraintlayout.widget.ConstraintLayout>