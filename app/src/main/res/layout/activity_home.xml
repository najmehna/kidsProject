<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="19dp"
            tools:layout_editor_absoluteX="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp" app:srcCompat="@drawable/healingtouch" android:id="@+id/imageView"
                    android:layout_marginEnd="32dp" android:layout_marginTop="16dp"
                    android:layout_marginStart="32dp"/>
            <Button
                    android:text="@string/takeSurvey"
                    android:layout_width="match_parent"
                    android:layout_height="46dp" android:id="@+id/takeSurveyButton"
                    android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
                    android:layout_marginTop="8dp"
            />
            <Button
                    android:text="@string/viewSurvey"
                    android:layout_width="match_parent"
                    android:layout_height="54dp" android:id="@+id/viewSurveyButton"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="8dp"
            />
            <Button
                    android:text="@string/weatherReport"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" android:id="@+id/weatherButton"
                    android:layout_marginStart="32dp" android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"/>
            <Button
                    android:text="@string/donate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/donationButton"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp" android:layout_marginTop="8dp"
            />
            <Button
                    android:text="@string/signOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/signOutButton"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp" android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>